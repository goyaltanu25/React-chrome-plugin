{
  "name": "MIX Extension",
  "description": "My first Chrome Extension which is kind of link manager",
  "version": "1.1",
  "manifest_version": 2,
  "browser_action": {
    "default icon": "favicon.png",
    "default title": "My Extension",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentfinal.js"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'sha256-zbTsXfL+KErA5JUnP2TgoXAV0jTRWFPVja3U6gU3oC0='; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "/static/*"
  ]
}